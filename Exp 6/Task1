#include<stdio.h>
//Function to count how many times it is called
void counter(){
static int count=0;  //Static variable retain its value across fumction calls
count++;   //   Increment the counter each time the function is called
printf("The fumction has been called %d times\n",count );
}
int main (){
//Calling theounter function multiple times
counter(); //First call
counter(); //Second call
counter(); //Third call
counter(); //Fourth call
counter(); //Fifth call
counter(); //Sixth call
return 0;
}
